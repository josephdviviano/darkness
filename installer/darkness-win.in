Section "Darkness (required)"	

	SectionIn RO

	SetOutPath $INSTDIR
	File @PROJECT_BINARY_DIR@\src\main\release\darkness.exe
	File @PROJECT_BINARY_DIR@\src\main\release\darknessScript.exe
	File @PROJECT_BINARY_DIR@\src\main\release\OpenDark.dll
	File /oname=darkness.cfg @CMAKE_CURRENT_SOURCE_DIR@\installer\darkness-sample.cfg
	File @CMAKE_CURRENT_SOURCE_DIR@\installer\readme.txt
	File "$%OGRE_HOME%\bin\release\*.dll"	
	File "$%OGRE_HOME%\bin\release\Plugins.cfg"
	File "@FREEIMAGE_PATH@\Dist\FreeImage.dll"
	FILE /x py*_d.dll "$%WinDir%\System32\Py*.dll"
	
	SetOutPath $INSTDIR\Scripts
	File /r /x .svn "@CMAKE_CURRENT_SOURCE_DIR@\Scripts\*.*"
	

	WriteRegStr HKLM SOFTWARE\NSIS_darkness "Install_Dir" "$INSTDIR"

	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\darkness" "DisplayName" "NSIS darkness"
	WriteRegStr HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\darkness" "UninstallString" '"$INSTDIR\uninstall.exe"'
	WriteRegDWORD HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\darkness" "NoModify" 1
	WriteRegDWORD HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\darkness" "NoRepair" 1
	WriteUninstaller "uninstall.exe"
  
SectionEnd

Section "Start Menu Shortcuts"

	SetOutPath $INSTDIR
	CreateDirectory "$SMPROGRAMS\Darkness"			
	CreateShortCut "$SMPROGRAMS\Darkness\Uninstall.lnk" "$INSTDIR\uninstall.exe" "" "$INSTDIR\uninstall.exe" 0
  
SectionEnd

;--------------------------------

; Uninstaller

Section "Uninstall"
  
	; Remove registry keys
	DeleteRegKey HKLM "Software\Microsoft\Windows\CurrentVersion\Uninstall\darkness"
	DeleteRegKey HKLM SOFTWARE\NSIS_darkness

	; Remove files and uninstaller
	Delete $INSTDIR\darkness.exe
	Delete $INSTDIR\darknessScript.exe
	Delete $INSTDIR\*.cfg
	Delete $INSTDIR\*.log
	Delete $INSTDIR\*.dll
	Delete $INSTDIR\*.bmp
	Delete $INSTDIR\*.lnk
	Delete $INSTDIR\*.txt
	Delete $INSTDIR\uninstall.exe

	; Remove shortcuts, if any
	Delete "$SMPROGRAMS\Darkness\*.*"

	; Remove directories used
	RMDir "$SMPROGRAMS\Darkness"
	RMDir /r "$INSTDIR\Scripts\"
	RMDir "$INSTDIR"


SectionEnd