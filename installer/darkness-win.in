	CreateShortCut "$SMPROGRAMS\Darkness\Darkness (SS2).lnk" "$INSTDIR\darkness.exe" "SS2" "$Shock2Dir\Shock2.exe" 0
	CreateShortCut "$INSTDIR\darkness (Shock 2).lnk" "$INSTDIR\darkness.exe" "SS2" "$Shock2Dir\Shock2.exe" 0
