SetCompressor /SOLID /FINAL lzma

; The following plugin does not install with NSIS by default.
; Grab it from http://nsis.sourceforge.net/RecFind:_Recursive_FindFirst,_FindNext,_FindClose
!include RecFind.nsh

!include nsDialogs.nsh
!insertmacro NSD_FUNCTION_INIFILE

ShowInstDetails show
ShowUninstDetails show
XPStyle on
AddBrandingImage left 129

Name "Darkness"
Caption "Darkness @DARKNESS_VER_MAJOR@.@DARKNESS_VER_MINOR@.@DARKNESS_VER_PATCH@: @REL_CODE_NAME@"
BrandingText "Darkness Team"
LicenseData @CMAKE_CURRENT_SOURCE_DIR@\copying
LicenseForceSelection checkbox "I accept the terms in the license agreement"

Var Thief1Dir
Var Thief2Dir
Var Shock2Dir

OutFile "darknessSetup.exe"

InstallDir C:\Games\Darkness

InstallDirRegKey HKLM "Software\NSIS_darkness" "Install_Dir"

;Request application privileges for Windows Vista
RequestExecutionLevel admin

LoadLanguageFile "${NSISDIR}\Contrib\Language files\English.nlf"

;--------------------------------

VIProductVersion "@DARKNESS_VER_MAJOR@.@DARKNESS_VER_MINOR@.@DARKNESS_VER_PATCH@.0"
VIAddVersionKey /LANG=${LANG_ENGLISH} "ProductName" "Darkness"
VIAddVersionKey /LANG=${LANG_ENGLISH} "Comments" "Darkness"
VIAddVersionKey /LANG=${LANG_ENGLISH} "CompanyName" "Darkness Team"
VIAddVersionKey /LANG=${LANG_ENGLISH} "LegalTrademarks" "GPL"
VIAddVersionKey /LANG=${LANG_ENGLISH} "LegalCopyright" "© Darkness Team"
VIAddVersionKey /LANG=${LANG_ENGLISH} "FileDescription" "Darkness @DARKNESS_VER_MAJOR@.@DARKNESS_VER_MINOR@.@DARKNESS_VER_PATCH@: @REL_CODE_NAME@"
VIAddVersionKey /LANG=${LANG_ENGLISH} "FileVersion" "@DARKNESS_VER_MAJOR@.@DARKNESS_VER_MINOR@.@DARKNESS_VER_PATCH@"

;--------------------------------

Page Custom ShowWelcome
Page license
Page components
Page directory
Page instfiles
Page Custom SelectGames CreateResourceCfg
PageEx license
   LicenseText "Readme.txt:" "Next >"
   LicenseData @CMAKE_CURRENT_SOURCE_DIR@\installer\Readme.txt
   LicenseForceSelection off
PageExEnd
Page Custom ShowDone

UninstPage uninstConfirm
UninstPage instfiles

