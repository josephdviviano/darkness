	SetOutPath $INSTDIR
	CreateShortCut "$SMPROGRAMS\Darkness\Darkness (TMA).lnk" "$INSTDIR\darkness.exe" "T2" "$Thief2Dir\thief2.exe" 0
	CreateShortCut "$INSTDIR\darkness (Thief 2).lnk" "$INSTDIR\darkness.exe" "T2" "$Thief2Dir\thief2.exe" 0	
	FileClose $8
	empty:	

FunctionEnd

Function SetupShock2
	StrCmp $Shock2Dir "" empty
	
	FileOpen $8 $INSTDIR\shock2.cfg w			
	FileWrite $8 "[General]$\r$\nFileSystem=.\$\r$\nFileSystem=.\scripts\$\r$\n"
	FileWrite $8 "FileSystem=.\scripts\Shock2$\r$\nFileSystem=$Shock2Dir$\r$\n"	
		
	${RecFindOpen} "$Shock2Dir" $0 $1
	${RecFindFirst}
