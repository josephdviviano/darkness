// Ogre overlay scripts
Darkness/LoadOverlay
{
	zorder 510
	// Main panel block
	container BorderPanel(Darkness/LoadPanel)
	{
		metrics_mode pixels
		vert_align center
		horz_align center
		left -320 
		top -15
		width 320
		height 50

		element TextArea(Darkness/LoadPanel/Description)
		{
			metrics_mode pixels
			left 10
			top 10
			width 300
			height 20
			font_name Thief
			char_height 72
			caption Loading, please wait...
			colour_top 0.5 0.5 0.2
			colour_bottom 0.5 0.5 0.2
		}
	}
}


